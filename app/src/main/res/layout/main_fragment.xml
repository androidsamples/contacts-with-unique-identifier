<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <Button
        android:id="@+id/btn_contacts_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        android:text="@string/go_to_contacts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/lookupItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@id/btn_contacts_list"
        app:layout_constraintStart_toStartOf="@id/btn_contacts_list"
        app:layout_constraintTop_toBottomOf="@id/btn_contacts_list" />

    <Button
        android:id="@+id/btn_search_contact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/search_contact"
        app:layout_constraintEnd_toEndOf="@id/lookupItem"
        app:layout_constraintStart_toStartOf="@id/lookupItem"
        app:layout_constraintTop_toBottomOf="@id/lookupItem" />

</androidx.constraintlayout.widget.ConstraintLayout>
